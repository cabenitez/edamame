.tabbed.fullwidth.cms-window
	div
		header
			h2 Articles
		ul.functions
			li
				a(href="/cms/articles/create") Create
		ul.tabs
			li.current Live
			li Draft
		article.articles.current
			ul.list
				- each article in live
					li
						span #{article.title}
						a(href: '/cms/articles/update/' + article._id) edit
		article.articles
			ul.list
				- each article in draft
					li
						span #{article.title}
						a(href: '/cms/articles/update/' + article._id) edit
